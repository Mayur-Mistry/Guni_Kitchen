@using Guni_Kitchen_WebApp.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<MyIdentityUser> SignInManager
@inject UserManager<MyIdentityUser> UserManager


<ul class="navbar-nav float-right">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><h4>Hello @User.Identity.Name!</h4></a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
            <button  type="submit" class="nav-link btn btn-link text-light"><h4>Logout</h4></button>
        </form>
    </li>
}
else
{

    <li class="nav-item" >
        <a class="nav-link " asp-area="Identity" asp-page="/Account/Register"><h4>Register</h4></a>
    </li>
    <li class="nav-item">
        <a class="nav-link " asp-area="Identity" asp-page="/Account/Login"><h4>Login</h4></a>
    </li>
    
}
</ul>
